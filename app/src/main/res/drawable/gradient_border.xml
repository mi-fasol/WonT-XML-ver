<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/mainColor"
                android:endColor="@color/white"
                android:type="radial"
                android:gradientRadius="140dp"
                android:centerX="50%"
                android:centerY="50%" />
            <corners android:radius="15dp" />
            <stroke android:width="1dp" android:color="#00000000" /> <!-- Transparent stroke to create space for blur -->
        </shape>
    </item>
</layer-list>